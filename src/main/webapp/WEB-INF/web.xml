<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		 version="3.0">

	<servlet>
		<servlet-name>KTV Servlet</servlet-name>
		<servlet-class>ru.darvell.ktv.web.KTVServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>KTV Servlet</servlet-name>
		<url-pattern>/ktv</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Abonents</servlet-name>
		<servlet-class>ru.darvell.ktv.web.Abonents</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Abonents</servlet-name>
		<url-pattern>/ktv/abonents</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<scripting-invalid>true</scripting-invalid>
		</jsp-property-group>
	</jsp-config>


</web-app>