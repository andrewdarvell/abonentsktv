<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ru.darvell.ktv.logic.payments">

	<class name="Payment" table="PAYMENTS">

		<id name="id" column="PAYMENT_ID" type="java.lang.Long">
			<generator class="increment"/>
		</id>

		<property name="summ" column = "DESCRIPTION" type="big_decimal" precision="23" scale="2"/>
		<property name="comment" column="COMMENT"/>
		<many-to-one name="paySystem" class="PaySystem" column="PAYSYSTEM_ID" not-null="true"/>

	</class>

</hibernate-mapping>